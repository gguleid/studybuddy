<%- include("../partials/head") %>

<body>
    <header>
		<h1 class="header_h1"><img src="/imgs/studybuddy-icon.svg" class="studybuddy-icon"/>Study Buddy: <%= card.title %></h1>
		<nav class="sidenav">
				<a href="/">Home</a>
				<a href="/cards">Index Cards</a>
				<a href="/cards/new">Create Index Cards</a>
		</nav>
	</header>
    <main class="indexcards-show">
        <%= card.body %>
        <section class="forms-buttons" >
            <form action="/cards/<%=card._id%>?_method=DELETE" method="POST" >
                <input type="submit" value="Delete card" class="btn btn-outline-danger"/>
                <a href="/cards/<%=card._id%>/edit" class="btn btn-outline-warning" type="submit">Edit Card</a> 
            </form>
        </section>
        <section class="sources">   
            <h4 style="font-weight: bolder;">Sources:</h4>
            <a href="<%=card.source%>"><%=card.nameOfSource%></a> <br>
        </section>

    </main>
</body>

</html>
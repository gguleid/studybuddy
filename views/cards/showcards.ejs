<%- include("../partials/head") %>

<body>
    <header>
		<h1 class="header_h1"><img src="/imgs/studybuddy-icon.svg" class="studybuddy-icon"/>Study Buddy: <%= card.title %></h1>
		<nav class="sidenav">
				<a href="/">Home</a>
				<a href="/cards/new">Create Index Cards</a>
		</nav>
	</header>
    <main class="indexcards-show">
        <%= card.body %>
        <section class="forms">
            <a href="/cards/<%=card._id%>/edit">Edit Card</a>
            <form action="/cards/<%=card._id%>?_method=DELETE" method="POST">
                <input type="submit" value="Delete card" />
            </form>
        </section>
        <section class="sources">   
            <h4>Resources:</h4>
            <a href="<%=card.source%>>/"><%=card.sourceName%></a> <br>
            
        </section>

    </main>
</body>

</html>
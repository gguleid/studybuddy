<%- include("../partials/head") %>

<body>
    <header>
		<h1 class="header_h1"><img src="/imgs/creativity.svg" class="studybuddy-icon"/>Study Buddy: <%= card.title %></h1>
		<nav class="sidenav">
				<a href="/">Home</a>
				<a href="/cards">Index Cards</a>
				<a href="/cards/new">Create Index Cards</a>
		</nav>
	</header>
    <main class="indexcards-show">
        <section class="backofthecard">
        <%= card.body %>
    </section>
    <section class="form-buttons">
        <form action="/cards/<%=card._id%>?_method=DELETE" method="POST" >
            <input type="submit" value="Delete card" > 
        </form>
        <a href="/cards/<%=card._id%>/edit" >
            <input type="submit" value="Edit card" >
         </a> 
    </section>
        <section class="sources">   
            <h4 style="font-weight: bolder;">Sources:</h4>
            <a href="<%=card.source%>"><%=card.nameOfSource%></a> <br>
        </section>

    </main>
</body>

</html>
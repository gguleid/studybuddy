<%- include("../partials/head.ejs") %>

<body>
	<%- include("../partials/header.ejs") %>
	<h1 class="indexcards">Edit</h1><br>
	<main class="indexcards">
		<form action="/cards/<%=card._id%>?_method=PUT" method="POST">
			<fieldset>
				<legend>Edit Card:  <%= card.title %> </legend>
			<label for="title">Title: </label>
			<input type="text" name="title" value="<%=card.title%>"/><br />
			<label for="body">Field: </label>
			<textarea name="body" value="<%=card.body%>"><%=card.body%></textarea><br />
			<label for="source">URL Source: </label>
			<input type="url" name="source" value="<%= card.source %> "/><br />
			<label for="nameOfSource">Name of source: </label>
			<input type="text" name="nameOfSource" value="<%=card.nameOfSource%>"/><br />
			<input type="submit" value="Edit card" class="btn btn-outline-warning" />
		</fieldset>
		</form>
	</main>
</body>
</html>